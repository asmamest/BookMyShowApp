<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/scheduleTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8:00 PM"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scheduleDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opening Act: The Rockers"
        android:textColor="#444444"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />

    <!-- âœ… Nouveau TextView pour afficher le check-in -->
    <TextView
        android:id="@+id/scheduleCheckinTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check-in: 5:00 PM"
        android:textColor="#FF5252"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

</LinearLayout>
